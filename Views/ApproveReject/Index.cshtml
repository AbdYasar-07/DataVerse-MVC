<style>
    * {
        margin: 0;
        padding: 0;
        font-family: sans-serif;
    }

    .formWrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 88vh;
    }

    .header {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        padding: 10px 40px;
        border-bottom: 1px solid #adadad80;
    }

        .header img {
            width: 30px;
            height: 30px;
            object-fit: cover;
        }

    .form {
        width: 500px;
        margin-left: auto;
        margin-right: auto;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        /* background-color: #eee; */
        padding: 20px 50px;
        border-radius: 10px;
        border: 1px solid #adadad80;
        /* box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2); */
    }

        .form .caseTitle,
        .caseType,
        .caseTypeCode,
        .caseOwner {
            display: flex;
            width: 100%;
            align-items: flex-start;
            justify-content: flex-start;
            padding: 5px 20px;
            border-radius: 5px;
            position: relative;
            overflow: hidden;
            margin: 5px 0;
        }

            /* .form .caseTitle::before,
    .caseType::before,
    .caseDesc::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 4px;
        background-color: #00acda;
        border-radius: 10px;
    } */

            .caseTitle label,
            .caseType label,
            .caseTypeCode label,
            .caseOwner label{
                font-size: 14px;
                color: #000000;
                padding: 5px 0;
                width: 40%;
            }

            .caseTitle .output,
            .caseType .output,
            .caseTypeCode .output,
            .caseOwner .output {
                font-size: 14px;
                color: #000;
                padding: 12px;
                width: 100%;
                background-color: #adadad30;
                border-radius: 4px;
                line-height: 20px;
            }

    /* .caseTitle input,
    .caseType input,
    .caseDesc textarea {
        font-size: 16px;
        padding: 5px 0;
        width: 95%;
        border-radius: 5px;
        outline: none;
        color: #000;
        background-color: transparent;
        border: none;
    } */

    .actions {
        display: flex;
        align-items: center;
        justify-content: flex-end;
        width: 100%;
        margin-top: 10px;
    }

        .actions button {
            padding: 10px 20px;
            font-size: 13px;
            letter-spacing: 0.5px;
            margin-left: 10px;
            border-radius: 5px;
            border: none;
            outline: none;
            color: #fff;
            cursor: pointer;
        }

        .actions .reject {
            background-color: #d33131;
        }

        .actions .approve {
            background-color: #00acda;
        }

    .footer {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        background-color: #f5f5f5;
    }

        .footer p {
            font-size: 12px;
            padding: 10px;
        }
</style>

