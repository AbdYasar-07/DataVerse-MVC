    <div class="formWrapper">

        <div class="form">

            <div class="caseTitle">
                <label>Case Title</label>
                <label class="output">@ViewBag.title</label>
            </div>

            <div class="caseType">
                <label>Case Number</label>
                <label class="output">@ViewBag.caseNumber</label>
            </div>

            <div class="caseTypeCode">
                <label>Case Type</label>
                <label class="output">@ViewBag.casetypecode</label>
            </div>

            <div class="caseOwner">
                <label>Owner</label>
                <label class="output">@ViewBag.owner</label>
            </div>

            <div class="actions">
                <div>
                    @if (ViewBag.updated == true)
                    {
                    <div class="successMessage">
                        <p>Request Updated Successfully</p>
                    </div>
                    }
                    else if (ViewBag.updated == false)
                    {
                    <div class="errorMessage">
                        <p>Updation Failed. Server Error</p>
                    </div>
                    }
                </div>
                @if (ViewBag.isRecordId == true)
                {
                <div>
                    <a href="/Reject"><button class="reject">Reject</button></a>
                    <a href="/Approve"><button class="approve">Approve</button></a>
                </div>
                }
                else if (ViewBag.isRecordId == false)
                {
                <div>
                    <a href="/Reject"><button class="reject" disabled="true">Reject</button></a>
                    <a href="/Approve"><button class="approve" disabled="true">Approve</button></a>
                </div>
                }
            </div>
        </div>
    </div>

    <div class="footer">
        <p>© 2022 VestaTech BV</p>
    </div>

